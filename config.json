{
    "name": "LSTM_autoencoder",
    "n_gpu": 1,

    "arch": {
        "type": "GRU_Linear",
        "args": {
            "n_hiddens": 150,
            "n_hiddens_2": 70,
            "n_layers": 3
        }
    },
    "data_loader": {
        "type": "TimeSeriesDataLoader",
        "args":{
            "init_loader": false,
            "data_dir": "datasets/open",
            "batch_size": 256,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 1,
            "window_size": 41,
            "window_given": 40,
            "stride": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-5,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "mse_loss",
    "metrics": ["distance"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.01
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min distance",
        "early_stop": 100,

        "tensorboard": true
    }
}
