{
    "name": "StackedLSTM",
    "n_gpu": 1,

    "arch": {
        "type": "StackedLSTM",
        "args": {
            "n_hiddens": 200,
            "n_layers": 3
        }
    },
    "data_loader": {
        "type": "TimeSeriesDataLoader",
        "args":{
            "init_loader": false,
            "data_dir": "datasets/open",
            "batch_size": 256,
            "shuffle": false,
            "validation_split": 0.0,
            "window_size": 61,
            "window_given": 60,
            "stride": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-5,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "mse_loss",
    "metrics": ["losses"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.01
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,

        "monitor": "min losses",
        "early_stop": 100,

        "tensorboard": true
    }
}
